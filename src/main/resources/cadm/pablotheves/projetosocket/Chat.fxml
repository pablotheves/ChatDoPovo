<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" 
      stylesheets="@estilo.css" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="cadm.pablotheves.projetosocket.ChatController">
      
    <children>
      <BorderPane VBox.vgrow="ALWAYS">
         <top>
              <Label text="BEM-VINDO AO CHAT DO POVO" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="10.0" />
               </padding></Label>
         </top>
         
         <center>
            <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
              <content>
                  <VBox fx:id="vBoxChat" spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding></VBox>
              </content>
            </ScrollPane>
         </center>
         
         <left>
            <ListView fx:id="listaUsuarios" prefWidth="150.0" BorderPane.alignment="CENTER" />
         </left>
         
         <bottom>
            <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="txtMensagem" maxWidth="1.7976931348623157E308" promptText="Digite sua mensagem..." HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#Enviar" text="Enviar" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
    </children>
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>